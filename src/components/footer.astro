---
import Image from "astro/components/Image.astro"
import Logo from '../assets/images/genesis-logo-dark.png'
---
<div id="footer" class="container">
    <div class="row">
        <div class="col-4">
            <div class="nav-container">
                <ul class="nav flex-column align-cener">
                    <li class="nav-item">
                      <a class="nav-link active" aria-current="page" href="#">Home</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="/about">About</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="/pricing">Pricing</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="/gallery">Gallery</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/contact-me">Contact Me</a>
                    </li>
                  </ul>
            </div>
        </div>
        <div class="col-4 footer-logo d-flex justify-content-center">
            <Image src={Logo} alt="Genesis Photography Logo"/>
        </div>
        <div class="col-4 d-flex justify-content-center">
            <div class="footer-links d-flex flex-column justify-content-center">
                <a href="tel:352-238-7329" class="footer-link d-flex gap-3">
                    <div class="flex-column gap-0">
                        <p>Phone</p>
                        <p>(352) 238-7329</p>
                    </div>
                </a>
                <a href="mailto:genesishollandphoto@gmail.com" class="footer-link d-flex gap-3">
                    <div class="flex-column gap-0">
                        <p>Email</p>
                        <p>genesishollandphoto@gmail.com</p>
                    </div>
                </a>
            </div>
            
        </div>
    </div>
</div>

<style>
    #footer {
        padding: 10rem 0;
    }
    .nav-container {
        width: 100%;
        height: 100%;
        display:flex;
        justify-content: center;
    }
    .nav-container > .nav {
        align-items: flex-start;
        justify-content: center;
        gap: .5rem;
    }
    .nav-container > .nav a {
        font-family: 'Muli';
        font-size: 1.8rem;
        font-weight: 300;
        text-transform: uppercase;
        color: var(--primary-dark);
        letter-spacing: .3rem;
        background: linear-gradient(to right, var(--light-pink) 0%, var(--light-pink) 100%) 0px 95% / 0px 1px no-repeat;
        transition: ease .2s;
    }
    .nav-container > .nav a:hover {
        background-size: 100% 1px;
    }
    .nav-link {
        padding-left: 0;
    }
    .footer-logo {
        border-left: 1px solid var(--light-pink);
        border-right: 1px solid var(--light-pink);
    }
    .footer-logo img {
        width: 75%;
        height: auto;
    }
    .footer-link {
        text-decoration: none;
        margin-bottom: 1.5rem;
    }
    .footer-link p {
        margin: 0;
    }
    .footer-link p:nth-of-type(1) {
        font-style: italic;
        color: var(--p-light);
    }
    .footer-link p:nth-of-type(2) {
        font-size: 2.4rem;
        background: linear-gradient(to right, var(--light-pink) 0%, var(--light-pink) 100%) 0px 95% / 0px 1px no-repeat;
        transition: ease .25s;
    }
    .footer-link p:nth-of-type(2):hover {
        background-size: 100% 1px;
    }
</style>